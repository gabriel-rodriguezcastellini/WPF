<Window
    x:Class="Exercise7.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Exercise7"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:viewmodels="clr-namespace:Exercise7.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:ViewModel}"
    Title="MainWindow"
    Width="400"
    Height="400"
    mc:Ignorable="d">

    <Grid>

        <StackPanel Margin="10">
            <TextBlock Text="Lista Nombres:" />
            <ComboBox Name="Combobox1" SelectedItem="{Binding SelectedName}" ItemsSource="{Binding ListNames, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock Text="Selección:  " />
            <TextBlock Name="TextBlock1" Text="{Binding SelectedName}" />
        </StackPanel>

    </Grid>

</Window>
